<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/boardcard_layout"
    android:layout_gravity="center"
    android:padding="4dp"
    app:cardElevation="6dp"
    android:layout_margin="8dp"
    app:cardCornerRadius="20dp"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="198dp"
        android:layout_gravity="center"
        tools:layout_editor_absoluteY="1dp">

        <TextView
            android:id="@+id/card_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="8dp"
            android:text="Assign Nfc"
            android:textColor="@color/black"
            android:fontFamily="@font/montserrat_bold"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/card_thumbnail"
            app:layout_constraintStart_toStartOf="@+id/card_thumbnail"
            app:layout_constraintTop_toBottomOf="@+id/card_thumbnail" />

        <ImageView
            android:id="@+id/card_thumbnail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:src="@drawable/assign_nfc"
            app:layout_constraintBottom_toTopOf="@+id/card_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>